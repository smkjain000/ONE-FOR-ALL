<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.project.Fourteenth"
    android:background="@drawable/d">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. On July____ ,man walked on the moon for the first time."
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="25dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:background="@android:color/transparent" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/imageButton5"
        android:layout_above="@+id/imageButton5"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5"
        android:layout_below="@+id/textView12">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:text="19th"
            android:id="@+id/radioButton13"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:text="21th"
            android:id="@+id/radioButton14"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:text="20th"
            android:id="@+id/radioButton15"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:text="18th"
            android:id="@+id/radioButton16"
            android:checked="false" />
    </RadioGroup>

</RelativeLayout>
